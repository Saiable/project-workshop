.indexContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: aliceblue; /*由于是flex布局，高度被内容撑开，不是全屏的*/
  height: 100%;
}
.avatarUrl {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: 100rpx 0;
}

.userName {
  font-size: 32rpx;
  margin: 100rpx 0;

}
.goStudy {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  border: 1px solid #333;
  border-radius: 10rpx;
}