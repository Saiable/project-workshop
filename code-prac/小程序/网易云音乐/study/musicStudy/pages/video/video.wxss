/* pages/video/video.wxss */
.videoContainer .header {
    display: flex;
    padding: 10rpx;
}
.videoContainer .header image {
    width: 60rpx;
    height: 60rpx;
}
.videoContainer .header .search {
    border: 1px solid #eee;
    flex: 1;
    margin: 0 20rpx;
    font-size: 26rpx;
    text-align: center;
    line-height: 60rpx;
    color: #d43c33;
}

/* 导航区域 */

.navScroll {
    box-sizing: border-box;
    display: flex;
    height: 60rpx;
    margin-bottom: 20rpx;
    white-space: nowrap;
}

.navScroll .navItem {
    height: 60rpx;
    line-height: 60rpx;
    padding: 0 30rpx;
    font-size: 28rpx;
}
.navScroll .navContent {
    height: 60rpx;
    box-sizing: border-box;
}
.navItem .active {
    border-bottom: 1px solid #d43c33;
}

/* 视频列表 */
.videoItem {
    padding: 0 3%;
    margin-bottom: 40rpx;

}

.videoItem video {
    width: 100%;
    height: 360rpx;
    border-radius: 10rpx;
}


.videoItem .content {
    font-size: 26rpx;
    height:80rpx;
    line-height: 80rpx;
    /* max-width: 500rpx; */
    width: 96%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

/* footer */
.footer {
    border-bottom: 1rpx solid #eee;
    /* padding: 10rpx 0; */
    padding-bottom: 20rpx;
}
.footer .avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    vertical-align: middle;
}

.footer .nickName {
    font-size: 26rpx;
    vertical-align: middle;
    margin-left: 20rpx;
}

.footer .comments_praised {
    float: right;
    /* height: 48rpx;
    vertical-align: center;
    line-height: 48rpx; */

}

.comments_praised .btn {
    display: inline;
    padding: 0;
    background-color: transparent;
    border-color: transparent;
}

.comments_praised .btn:after {
    border: none;
}

.comments_praised .item:not(:last-child) {
    margin-right: 120rpx;
    position: relative;
}

.comments_praised .item .count {
    position: absolute;
    top: 8rpx;
    padding-left: 6rpx;
    font-size: 20rpx;

}
